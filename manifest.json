{
  "manifest_version": 2,
  "name": "Subway Surfers Tracker",
  "version": "1.2",
  "description": "Track and complete Subway Surfers daily challenges.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "notifications"]
}